# Health check
health-check:
	@echo "$(YELLOW)[HEALTH] V√©rification de la sant√© des services...$(NC)"
	@echo -n "Gateway:    " && (curl -s http://localhost:8080/health >/dev/null 2>&1 && echo "$(GREEN)‚úÖ OK$(NC)" || echo "$(RED)‚ùå DOWN$(NC)")
